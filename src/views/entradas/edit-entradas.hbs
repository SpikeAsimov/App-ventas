
<div class="container">
    <div class="row">
        <div class="col-md-4 mx-auto mt-4 mb-4">
            <div class="card">
                <div class="card-header bg-dark">
                    <h3 class="text-center text-white">Editar Entrada</h3>
                </div>
                <div class="card-body">
                    <form action="/entradas/edit-entradas/{{editEntrada._id}}?_method=PUT" method="POST">
                        <input type="hidden" name="_method" value="PUT">
                        <div class="form-group">
                            <input type="text" name="titulo" class="form-control" placeholder="Titulo" value="{{editEntrada.titulo}}">
                        </div>
                        <div class="form-group">
                            <textarea name="descripcion" class="form-control" placeholder="Descripcion">{{editEntrada.descripcion}}</textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary btn-block" type="submit">
                                Guardar
                            </button>
                        </div> 
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>