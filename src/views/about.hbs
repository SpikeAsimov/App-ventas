<div class="container mx-auto mt-5">
    <div class="card">
        <div class="card-body">
            <p id="text"></p>
            <hr>
        </div>
    </div>
</div>



<script type="text/javascript">
    var i=0, text;
    text="";

    function typing(){
        if(i<text.length){
            document.getElementById("text").innerHTML += text.charAt(i);
            i++;
            setTimeout(typing,80);
        }
    }
    typing();    
</script>
