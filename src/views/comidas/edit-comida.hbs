<div class="col-md-4 mx-auto mt-4 mb-4">
    <div class="card">
        <div class="card-header bg-dark">
            <h3 class="text-white text-center"><a href="/comidas" title="Volver" style="float: left; color: white;"><i class="far fa-arrow-alt-circle-left"></i></a> Editar Comida</h3>
        </div>
        <div class="card-body">
            <form action="/comidas/edit-comida/{{editComida._id}}?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" name="descripcion" id="descripcion" class="form-control" value="{{editComida.descripcion}}" placeholder="Descripcion" required>
                </div>
                <div class="form-group">
                    <input type="number" name="precio" id="precio" class="form-control" value="{{editComida.precio}}" placeholder="Precio" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">Actualizar</button>
                </div>
            </form>
        </div>
    </div>
</div>