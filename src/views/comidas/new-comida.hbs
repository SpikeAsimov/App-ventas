<div class="col-md-4 mx-auto mt-4 mb-4">
    <div class="card">
        <div class="card-header bg-dark">
            <h3 class="text-white text-center">Agregar Comidas</h3>
        </div>
        <div class="card-body">
            <form action="/comidas/new-comida" method="POST">
                <div class="form-group">
                    <input type="text" name="descripcion" id="descripcion" class="form-control" placeholder="Descripcion" required>
                </div>
                <div class="form-group">
                    <input type="number" name="precio" id="precio" class="form-control" placeholder="Precio" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">Publicar</button>
                </div>
            </form>
        </div>
    </div>
</div>