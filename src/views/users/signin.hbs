<div class="container">
    <div class="row">
        <div class="col-md-4 mx-auto mt-4 mb-4">
            <hr style="background: white;">
            <h3 class="text-white text-center">Iniciar Sesión</h3>
            <hr style="background: white;">
            <form action="/users/signin" method="POST">
                <div class="form-group">
                    <input type="email" class="form-control" id="email" name="email" placeholder="Correo">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" id="password" name="password" placeholder="Contraseña">
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-block" type="submit">Ingresar</button>
                </div>
                <div class="form-group">
                    <span class="text-white text-center">¿No tienes una cuenta?<a href="/users/signup"
                            style="color:mediumspringgreen;"> ¡Regístrate!</a></span>
                </div>
            </form>
        </div>
    </div>
</div>